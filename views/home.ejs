<%- include("partials/header.ejs") %>
<h1>Hello</h1>
<p><%= content %></p>
<% if(locals.posts){ %>
    <div class="album py-5 bg-body-tertiary">
        <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
         <% for(var i=0;i<posts.length;i++){ %>
                <div class="col">
                    <div class="card shadow-sm">
                      <div class="card-body">
                       <h5 class="card-title"><%= posts[i].blogTitle %></h5>
                       <% if(posts[i].blogPost.length<=20){ %>
                          <p class="card-text" ><%= posts[i].blogPost %></p>
                          <% }else { %>
                              <% let first_part=posts[i].blogPost.substring(0,20);let second_part=posts[i].blogPost.substring(20); %>
                              <% let req_url=posts[i].blogTitle; %>
                              <p id="post_para" class="card-text" > <%= first_part %> ... <a href="/post/<%= posts[i].blogTitle %>">Read More</a> </p>
                          <% } %>
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="btn-group">
                            <a href="/post/<%= posts[i]._id %>" class="btn btn-primary">View</a>
                            <a href="/update/<%= posts[i]._id %>" class="btn btn-dark">Update</a>
                            <a href="/delete/<%= posts[i]._id %>" class="btn btn-danger">Delete</a>
                          </div>
                        </div>
                      </div>
                    </div>
                </div>
          <% } %>
        </div>
        </div>
    </div>
<% } %>
<%- include("partials/footer.ejs") %>


